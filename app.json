{
  "expo": {
    "name": "Mirror",
    "slug": "mirror",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mirror.app",
      "buildNumber": "1.0.0",
      "icon": "./assets/logo.png"
    },
    "android": {
      "package": "com.mirror.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      "expo-font",
      "expo-asset"
    ]
  }
}
